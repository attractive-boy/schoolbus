.bus-list {
  padding: 24rpx;
  background: #f8f9fc;
  min-height: 100vh;
}

.bus-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.bus-item:active {
  transform: scale(0.98);
}

.route-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.route-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.route-name text {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.route-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.stops-container {
  position: relative;
  padding-left: 40rpx;
}

.route-line {
  position: absolute;
  left: 16rpx;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: #e8e8e8;
}

.dot {
  position: absolute;
  left: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.dot.start {
  top: 0;
  background: #1989fa;
}

.dot.end {
  bottom: 0;
  background: #ff4d4f;
}

.stops-list {
  padding: 10rpx 0;
}

.stop-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
}

.stop-item text {
  font-size: 28rpx;
  color: #666;
}

.action-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
  width: 100%;
}

.status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.status.available {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.status.full {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

.book-btn {
  margin: 0;
}

.popup-content {
  padding-bottom: 24rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: 500;
}

.selected-dates {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  padding: 16rpx 0;
}

.date-tag {
  margin-bottom: 12rpx;
}

.price-info {
  margin: 32rpx 0;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-row.total {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #eee;
}

.price-label {
  color: #666;
}

.price {
  color: #ff4d4f;
  font-weight: 500;
}

.submit-btn {
  margin-top: 32rpx;
}

.popup-footer {
  padding: 24rpx;
}

.block {
  width: 100vw;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}

.t-overlay{
  top: 0rpx !important;
}