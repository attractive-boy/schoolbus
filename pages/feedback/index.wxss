.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}

.search-box {
  padding: 16rpx;
  background: #fff;
}

.user-list {
  flex: 1;
  overflow-y: auto;
}

.unread-badge {
  background: #ff4d4f;
  color: #fff;
  border-radius: 16rpx;
  padding: 2rpx 12rpx;
  font-size: 24rpx;
  min-width: 32rpx;
  text-align: center;
}