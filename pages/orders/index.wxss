.orders-container {
  padding: 8px;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-0 {  /* 待支付 */
  color: #1890ff;
  background: rgba(24,144,255,0.1);
}

.status-1 {  /* 已支付 */
  color: #52c41a;
  background: rgba(82,196,26,0.1);
}

.status-2 {  /* 已取消 */
  color: #ff4d4f;
  background: rgba(255,77,79,0.1);
}

.status-3 {  /* 已退款 */
  color: #faad14;
  background: rgba(250,173,20,0.1);
}

.status-4 {  /* 退款申请中 */
  color: #722ed1;
  background: rgba(114,46,209,0.1);
}

.popup-content {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

.popup-header {
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.popup-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #fa4126;
}

.popup-body {
  padding: 30rpx 0;
}

.order-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.popup-footer {
  padding-top: 20rpx;
}

/* 调整 t-cell 组件的样式 */
.t-cell {
  font-size: 26rpx !important;
}

.t-cell__title {
  font-size: 26rpx !important;
}

.t-cell__description {
  font-size: 24rpx !important;
}

.t-cell__note {
  font-size: 24rpx !important;
} 